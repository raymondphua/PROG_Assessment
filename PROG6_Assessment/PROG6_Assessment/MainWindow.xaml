<Window x:Class="PROG6_Assessment.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525"
        
        DataContext="{Binding Product, Source={StaticResource Locator}}">
    
    <StackPanel>
        <TextBlock Text="Producten Lijst" FontSize="28" />
        <DataGrid AutoGenerateColumns="False" IsReadOnly="True" SelectedItem="{Binding SelectedProduct}" ItemsSource="{Binding Products}" Margin="5">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding ProductId}" />
                <DataGridTextColumn Header="Product" Binding="{Binding ProductNaam}" Width="300" />
            </DataGrid.Columns>
        </DataGrid>
    </StackPanel>
</Window>
