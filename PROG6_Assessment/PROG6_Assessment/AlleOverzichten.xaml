<Window x:Class="PROG6_Assessment.AlleOverzichten"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kies een overzicht" Height="188" Width="300"
        Closing="Window_Closing"
        DataContext="{Binding Manager, Source={StaticResource Locator}}">
    <StackPanel Margin="0,0,0,0">
        <Button Command="{Binding AlleAfdelingenCommand }" Height="50">Afdelingen</Button>
        <Button Command="{Binding AlleProductenCommand }" Height="50">Producten</Button>
        <Button Command="{Binding AlleMerkenCommand }" Height="50">Merken</Button>
    </StackPanel>
</Window>
