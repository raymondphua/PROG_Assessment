<Window x:Class="PROG6_Assessment.OverzichtControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Overzicht" Height="237" Width="300"
        Closing="Window_Closing"
        DataContext="{Binding Manager, Source={StaticResource Locator}}">
    <StackPanel Margin="0,0,0,0" Background="#4f4f4f">
        <Rectangle Fill="#242424" HorizontalAlignment="Left" Height="53" Stroke="Black" Width="292"/>
        <Label Content="Appie" Foreground="White" FontSize="15" FontFamily="Arial" HorizontalContentAlignment="Center" HorizontalAlignment="Center" Height="28" Margin="0,-50,0,0" Width="156"/>

        <Button Content="Alle Overzichten" Command="{Binding ShowAlleOverzichtenCommand }" HorizontalAlignment="Center" Height="23" Margin="0,40,0,0" Width="159"/>
        <Button Content="Bepaalde afdelingen" Command="{Binding AfdelingOverzichtCommand }" HorizontalAlignment="Center" Height="23" Margin="0,20,0,0" Width="159"/>
    </StackPanel>
</Window>
