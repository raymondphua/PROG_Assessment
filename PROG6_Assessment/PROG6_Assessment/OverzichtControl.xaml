<Window x:Class="PROG6_Assessment.OverzichtControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Overzicht" Height="138" Width="300"
        Closing="Window_Closing"
        DataContext="{Binding Manager, Source={StaticResource Locator}}">
    <StackPanel Margin="0,0,0,0">
        <Button Command="{Binding ShowAlleOverzichtenCommand }" Height="50">Alle Overzichten</Button>
        <Button Command="{Binding AfdelingOverzichtCommand }" Height="50">Bepaalde Afdeling</Button>
    </StackPanel>
</Window>
