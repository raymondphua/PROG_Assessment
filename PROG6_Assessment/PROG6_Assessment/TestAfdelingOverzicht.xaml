<Window x:Class="PROG6_Assessment.TestAfdelingOverzicht"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TestAfdelingOverzicht" Height="350" Width="525"
        DataContext="{Binding AfdelingOverzicht, Source={StaticResource Locator}}">

    <StackPanel>
        <TextBlock Text="Afdeling overzicht" FontSize="28" />
        <DataGrid AutoGenerateColumns="False" IsReadOnly="True" SelectedItem="{Binding SelectedAfdeling}" ItemsSource="{Binding Afdelingen}" Margin="5">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding AfdelingId}" Width="100"/>
                <DataGridTextColumn Header="Afdeling" Binding="{Binding AfdelingNaam}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
    </StackPanel>
</Window>
