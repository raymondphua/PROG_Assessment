<Window x:Class="PROG6_Assessment.HoofdScherm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="HoofdScherm" Height="188" Width="300"
        Closing="Window_Closing"
        DataContext="{Binding Manager, Source={StaticResource Locator}}">
    
    <StackPanel Margin="0,0,0,0">
        <Button Command="{Binding ShowOverzichtControlCommand }" Height="50">Overzicht</Button>
        <Button Command="{Binding BeheerschermCommand }" Height="50">Beheer</Button>
        <Button Command="{Binding ShowMerkWindowCommand }" Height="50">BoodschappenLijst</Button>
    </StackPanel>
</Window>
