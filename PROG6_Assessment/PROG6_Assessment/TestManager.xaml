<Window x:Class="PROG6_Assessment.TestManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Beheer" Height="240" Width="300"
        Closing="Window_Closing"
        DataContext="{Binding Manager, Source={StaticResource Locator}}">
    <StackPanel Margin="0,0,0,0">
        <Button Command="{Binding ShowSecondWindowCommand }" Height="50">Beheer Afdeling</Button>
        <Button Command="{Binding ShowMainWindowCommand }" Height="50">Beheer Producten</Button>
        <Button Command="{Binding ShowMerkWindowCommand }" Height="50">Beheer Merken</Button>
        <Button Command="{Binding KortingBeheerCommand }" Height="50">Beheer Kortingen</Button>
    </StackPanel>
</Window>
